import os

#argent = 0

argent_depose_c = 0

argent_depose_e = 0

argent_retire_c = 0

résultat_us = 0

résultat_euro = 0

résultat_pound = 0

résultat_australie = 0

résultat_franc = 0

résultat_us2 = 0

résultat_euro2 = 0

résultat_pound2 = 0

résultat_australie2 = 0

résultat_franc2 = 0

retirer = 0

nip = 1111

i = 0.03

def canada_us(canada):
    return canada * 0.75

def us_canada(us):
    return us * 1.34
    
def canada_euro(canada):
    return canada * 0.68

def euro_canada(euro):
    return euro * 1.47
    
def canada_pound(canada):
    return canada * 0.59
    
def pound_canada(pound):
    return pound * 1.69

def canada_australie(canada):
    return canada * 1.11
    
def australie_canada(australie):
    return australie * 0.91
    
def canada_franc(canada):
    return canada * 0.67
    
def franc_canada(franc):
    return franc * 1.50


print("Bienvenue, entrez votre nom et votre Nip")
print("\n")
nom = input("Entrez votre nom: ")
#nip = int(input("Entrez votre Nip qui voud avez été fourni par la banque: "))


while True:
    try:
        
        nip = int(input("Entrez votre Nip qui voud avez été fourni par la banque: "))
        if nip == 1111:
            break
                
    
        if not nip == 1111:
            print("Votre Nip est incorrect, veuillez essayer de nouveau ou votre la banque pour de l'aide.")
            
    
    except:
        ValueError
        print("Erreur, entrez seulement des nombres entiers")
        True        
    
    
while True:
    try:
        if nip == 1111:
            print("\n")
            print("Mot de passe accepté")
            print("\n")
            print("Veuillez créer une nouveau mot de passe")
            mot_de_passe = input("Insérer nouveau mot de passe (tout caractère est permis): ")
            os.system("clear")
            break
    except:
        ValueError
        print("Erreur, entrez seulement des nombres entiers")
        True        
            

while True:
    try:
        
    
            
        reconfirm = input("Veuillez vérifier votre mot de passe: ")
        if reconfirm == mot_de_passe:
            os.system("clear")
            break
            
        
        
        
        if not reconfirm == mot_de_passe:
            print("Mot de passe incorrect, veuillez essayer de nouveau")
            True
            
        
    except:
        ValueError
        print("Erreur, entrez seulement des nombres entiers")
        True    
        
        
