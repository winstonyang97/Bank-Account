                if choix_e_simple == 3:
                    print("Vous avez choisi de quitter, Au revoir")
                    break
            except:
                ValueError
                print("Erreur, entrez seulement des nombres entiers")
                True
                
                
            if(choix_e_simple == 1):
                try:
                    
                   
                    c_a_e = float(input("Combien d'argent voulez vous transferer?: "))
                    chèque_épargne_s = argent_depose_c - c_a_e
                    if chèque_épargne_s > 0:
                        finale_é_s = (c_a_e) * (i) + (c_a_e)
                        argent_depose_e = argent_depose_e + finale_é_s
                        argent_depose_c = chèque_épargne_s
                    elif c_a_e > argent_depose_c:
                        print("Impossible de transérer une somme plus grand que ton balance")
                   
                    print("Vos modifications ont été enregistrées")
                    again = input("Voudrais-tu recommencer? o/n")
                    if again == "o":
                        os.system("clear")
                        True
                    if again == "n":
                        print ("Au revoir, bonne journée")
                        break
                    
                    
                except:
                    ValueError
                    os.system("clear")
                    print("Erreur, entrez seulement des nombres entiers")
                    True
                    
                    
            elif(choix_e_simple == 2):
                try:
                    
                    année_c = int(input("Combien d'années veut tu investir?: "))
                    c_a_e_c = float(input("Combien d'argent voulez vous transferer?: "))
                    chèque_épargne_c = argent_depose_c - c_a_e_c
                    if chèque_épargne_c > 0:
                        finale_é_c = ((1 + i) ** année_c) * c_a_e_c
                        argent_depose_e = argent_depose_e + finale_é_c
                        argent_depose_c = chèque_épargne_c
                    elif c_a_e_c > argent_depose_c:
                        print("Impossible de transérer une somme plus grand que ton balance")
                   
                    print("Vos modifications ont été enregistrées")
                    again = input("Voudrais-tu recommencer? o/n")
                    if again == "o":
                        os.system("clear")
                        True
                    if again == "n":
                        print ("Au revoir, bonne journée")
                        break
                    
                    
                except:
                    ValueError
                    os.system("clear")
                    print("Erreur, entrez seulement des nombres entiers")
                    True        
                    
                    
        elif(choix_transfere == 2):
            try:
                os.system("clear")
                e_a_c = float(input("Combien d'argent voulez vous transferer?: "))
                épargne_cheque = argent_depose_e - e_a_c
                if épargne_cheque > 0:
                    argent_depose_c = argent_depose_c + e_a_c
                    argent_depose_e = épargne_cheque
                    
                    
                elif e_a_c > argent_depose_e:
                    print("Impossible de transérer une somme plus grand que ton balance")
                    
                    
                    
                print("Vos modifications ont été enregistrées")
                again = input("Voudrais-tu recommencer? o/n")
                if again == "o":
                    os.system("clear")
                    True
                if again == "n":
                    print ("Au revoir, bonne journée")
                    break
                    
                    
            except:
                ValueError
                os.system("clear")
                print("Erreur, entrez seulement des nombres entiers")
                True
                

# Voici la fin du code pour transferer l'argent
