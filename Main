        ValueError
        print("entrez une chiffre seulement")
        
#*******************************************************
# Voici le code pour le compte chèque
        

    if(choix_banque == 1):
        try:
            os.system("clear")
            print("Vous avez choisi le compte chèque de",nom)
            print (1*"\n")
            print("Votre solde actuel est de: ",argent_depose_c,"$")
            print("Que voulez vous faire aujourd'hui? : \n\n")
            print("    1-Déposer de l'argent")
            print("    2-Retirer de l'argent")
            print("    3-Quitter")
            
            choix_cheque = int(input("Entrer votre choix: "))
            print("Vous avez choisi le numéro: ",choix_cheque)
    
            if choix_cheque > 3 or choix_cheque < 1:
                os.system("clear")
                print ("Ce choix est incompatible")
    
        
            if choix_cheque == 3:
                print("Vous avez choisi de quitter, Au revoir")
                break
        except:
            ValueError
            print("Erreur, entrez seulement des nombres entiers")
            True
            
#*******************************************************
# Voici le code pour déposer l'argent             
                
        if(choix_cheque == 1):
            try:
                
                deposer = float(input("Combien de dollars veut tu deposer? "))
                if deposer > 0:
                    argent_depose_c = argent_depose_c + deposer
                else:
                    print("Impossible de déposer une somme négative")
                print("Vos modifications ont été enregistrées")    
                again = input("Voudrais-tu recommencer? o/n")
                if again == "o":
                    os.system("clear")
                    True
                    
                if again == "n":
                    print ("Au revoir, bonne journée")
                    break
                
                
                
            except:
                ValueError
                os.system("clear")
                print("Erreur, entrez seulement des nombres entiers")
                True    
    
#*******************************************************
# Voici le code pour retirer l'argent     
    
        
        elif(choix_cheque == 2):
            try:
                
                retirer = float(input("Combien de dollars veut tu retirer? "))
                argent_retire_c = argent_depose_c - retirer
                if argent_retire_c > 0:
                    argent_depose_c = argent_retire_c
                else:
                    print("Impossible de retirer une somme plus grand que ton balance")
                print("Vos modifications ont été enregistrées")    
                again = input("Voudrais-tu recommencer? o/n")
                if again == "o":
                    os.system("clear")
                    True
